<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:id="@+id/group_member_list_item_root_lay"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/group_member_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/group_member_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/group_member_img"
        android:text="Manish"
        android:textColor="@color/purple_700" />

    <TextView
        android:id="@+id/group_member_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_member_name_txt"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/group_member_img"
        android:text="status message"
        android:textSize="12dp"/>


    <TextView
        android:id="@+id/is_admin_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:background="@drawable/admin_bg"
        android:paddingStart="7dp"
        android:paddingTop="2dp"
        android:paddingEnd="7dp"
        android:paddingBottom="2dp"
        android:text="Admin"
        android:textSize="12dp" />

</RelativeLayout>