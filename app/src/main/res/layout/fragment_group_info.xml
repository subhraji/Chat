<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.GroupInfoFragment">

    <FrameLayout
        android:id="@+id/group_info_img_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/group_info_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#D2D2D2"
            android:src="@drawable/ic_baseline_person_24"/>
        <TextView
            android:id="@+id/group_info_group_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group name"
            android:textColor="#000000"
            android:textSize="28dp"
            android:layout_margin="10dp"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:paddingStart="10dp"/>

        <ImageView
            android:id="@+id/group_info_edit_img_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_gravity="end"
            android:layout_margin="20dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/group_info_created_by_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_info_img_lay"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:text="Created By: "
        android:textSize="18dp" />

    <TextView
        android:id="@+id/group_info_created_by_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_info_img_lay"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/group_info_created_by_view"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:text="Manish"
        android:textSize="18dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/group_info_add_group_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_info_created_by_txt"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/ic_add_gi_image"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Add Members"
        android:textSize="25dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/GroupMemberListRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_info_add_group_member"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="3"
        tools:listitem="@layout/group_member_list_item" />

</RelativeLayout>