<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:id="@+id/chatUserListItemRootLay"
    android:background="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/chat_user_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_baseline_person_24"/>
    <TextView
        android:id="@+id/chat_user_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manish"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/chat_user_img"
        android:textColor="@color/purple_700"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/chat_user_msg_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dgdhhd"
        android:layout_below="@+id/chat_user_name_txt"
        android:layout_toRightOf="@+id/chat_user_img"
        android:layout_marginStart="20dp"
        android:textSize="13dp"
        />
</RelativeLayout>