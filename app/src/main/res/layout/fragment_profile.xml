<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.ProfileFragment">

    <FrameLayout
        android:id="@+id/profile_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_baseline_person_24"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <ImageView
            android:id="@+id/profile_image_edit_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_margin="7dp"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="#000000"
            android:background="?android:attr/selectableItemBackground"/>
    </FrameLayout>
    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_image_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/profile_name_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/profile_name_edit_btn"
        android:background="@color/white"
        android:textColor="#737373" />

    <ImageView
        android:id="@+id/profile_name_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:tint="#000000" />


    <TextView
        android:id="@+id/mobile_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_name_edit_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/mobile_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile_text_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/profile_mobile_edit_btn"
        android:background="@color/white"
        android:inputType="number"
        android:textColor="#737373" />

    <ImageView
        android:id="@+id/profile_mobile_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:tint="#000000" />

    <Button
        android:id="@+id/update_profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/purple_700"
        android:text="Save changes"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>